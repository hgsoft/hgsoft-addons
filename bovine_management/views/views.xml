<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Action -->
    
    <record id="confinment_management_action" model="ir.actions.act_window">
        <field name="name">Confinment Management Form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">confinment.management</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="search_view_id" ref="sale_order_view_search_inherit_sale"/>-->
        <field name="context">{}</field>
        <!--<field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel'))]</field>-->
         <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new confinment!
            </p>
        </field>
    </record>
    
    <!-- View -->
    
    <record id="view_confinment_form" model="ir.ui.view">
        <field name="name">confinment.management.form</field>
        <field name="model">confinment.management</field>
        <field name="arch" type="xml">
            <form string="Confinment Management" class="o_sale_order">
            <sheet>
                <group col="2">
                    <group>
                        <field name="confinment_product_id" widget="product_template_many2one" options='{"always_reload": True}'/>
                        <field name="confinment_stage" widget="confinment_management_many2one" options='{"always_reload": True}'/>
                    </group>
                    <group>
                        <field name="stock_location_id" widget="stock_location_many2one" options='{"always_reload": True}'/>
                    </group>
                    <group>
                        <field name="number_of_animals"/>
                        <field name="number_of_treatments_or_wagons_per_day"/>
                    </group>
                    <group>
                        <field name="confinement_days"/>
                        <field name="kg_head_supplied_day"/>
                    </group>
                    <group>
                        <field name="input_weight"/>
                        <field name="output_weight"/>
                        <field name="slaughter_weight" readonly="1"/>
                        <field name="gmd" readonly="1"/>
                        <field name="carcass_yield"/>
                        <field name="carcass_gain" readonly="1"/>
                        <field name="gain_in_at_sign" readonly="1"/>
                        <field name="price_at_sign_sale"/>
                        <field name="sale_at_sign_produced_revenue" readonly="1"/>
                    </group>
                    <group>
                        <field name="total_revenue" readonly="1"/>
                        <field name="purchase_value_per_animal"/>
                        <field name="freight_charge_per_head"/>
                        <field name="funrual" readonly="1"/>
                        <field name="indea"/>
                        <field name="others"/>
                        <field name="daily_cost_head"/>
                        <field name="total_costs" readonly="1"/>
                        <field name="net_profit_head" readonly="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Confinment Ingredients" name="confinment_management_lines">
                        <field name="confinment_management_line" widget="section_and_note_one2many" mode="tree">
                            <tree string="Confinment Ingredients Line" editable="bottom">
                                <control>
                                    <create name="add_product_control" string="Add a product"/>
                                </control>
                                <field name="sequence" widget="handle"/>
                                <field
                                    name="product_id"
                                    options="{'no_open': True}"
                                    force_save="1"
                                    widget="product_configurator"
                                />
                                <field name="product_template_id"
                                    string="Product"
                                    invisible="1"
                                    options="{'no_open': True}"
                                    widget="product_configurator"
                                />
                                <field name="basal_diet"/>
                                <field name="percent_ms"/>
                                <field name="day_consumption" readonly="1"/>
                                <field name="value_kg_mn"/>
                                <field name="daily_cost" readonly="1"/>
                                <field name="consumption" readonly="1"/>
                                <field name="weighing_by_tract" readonly="1"/>
                                <field name="estimated_consumption_in_the_containment_period" readonly="1"/>
                                <field name="create_date" widget="date" readonly="1"/>
                            </tree>
                        </field>
                        <group name="note_group" col="6">
                            <group colspan="4">
                                <!--<field name="note" nolabel="1" placeholder="Terms and conditions..."/>-->
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                
                                <span> <b> Subtotals </b> </span>
                                <div class="oe_inline o_td_label" colspan="2">
                                </div>
                                <separator class="oe_subtotal_footer_separator" colspan="2"/>
                                
                                <field name="total_basal_diet"/>
                                <field name="total_day_consumption"/>
                                <field name="total_daily_cost"/>
                                <field name="total_consumption"/>
                                <field name="total_weighing_by_tract"/>
                                <field name="total_estimated_consumption_in_the_containment_period"/>
                                <field name="total_cost_in_the_period"/>
                                
                                <!--<field name="total_cost_in_the_period" nolabel="1" class="oe_subtotal_footer_separator"/>-->
                                
                                <!--
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="amount_total" />
                                </div>
                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                -->
                                
                            </group>
                            <div class="oe_clear"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_confinment_tree" model="ir.ui.view">
        <field name="name">confinment.management.tree</field>
        <field name="model">confinment.management</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Confinment" class="o_sale_order" multi_edit="1">
                <field name="confinment_product_id" string="Confinment Product" readonly="1"/>
                <field name="stock_location_id" string="Stock Location"/>
                <field name="confinment_stage" string="Confinment Stage"/>
            </tree>
        </field>
    </record>
    
    <!-- View x Action -->
        
    <record id="confinment_management_action_view_order_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_confinment_form"/>
        <field name="act_window_id" ref="confinment_management_action"/>
    </record>
    
    <record id="confinment_management_action_view_order_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_confinment_tree"/>
        <field name="act_window_id" ref="confinment_management_action"/>
    </record>    
    
    <!-- Menu -->
    
    <menuitem id="main_bovine_management_menu" name="Bovine Management"/>
    
    <menuitem id="bovine_management_menu" name="Bovine Management" parent="main_bovine_management_menu"/>
    
    <menuitem id="confinment_menu" name="Confinment" parent="bovine_management_menu" action="confinment_management_action"/>
    
</odoo>