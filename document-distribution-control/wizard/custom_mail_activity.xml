<odoo>
  <data>
    <record id="custom_mail_activity_view_form_popup" model="ir.ui.view">
        <field name="name">custom.mail.activity.view.form.popup</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <header attrs="{'invisible':[('revision_id','=',False)]}">
                    <field name="revision_state" widget="statusbar" statusbar_visible="in_progress,done"/>
                </header>
            </xpath>
            <xpath expr="//form/sheet/group[3]/group[2]/field[@name='user_id']" position="after">
                <field name="show_user_ids" invisible="1"/>
                <field name="user_ids" widget="many2many_tags_email" placeholder="Add existing users..." 
                       attrs="{'invisible':[('show_user_ids','=',False)]}"/>
            </xpath>
            <xpath expr="//form/sheet/group[3]" position="inside">
                <field name="revision_id" invisible="1"/>
                <group attrs="{'invisible':[('revision_id','=',False)]}" colspan="4">
                    <group >
                        <field name="revision_name" readonly="1"/>
                        <field name="revision_summary" readonly="1"/>
                    </group>
                    <group>
                        <field name="revision_write_user_name" readonly="1"/>
                        <field name="revision_write_date" readonly="1"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//form/sheet/footer" position="attributes">
                <attribute name="attrs">{'invisible':[('revision_state','=','done')]}</attribute>
            </xpath>
        </field>
    </record>
    <record id="custom_mail_activity_view_tree" model="ir.ui.view">
        <field name="name">custom.mail.activity.view.tree</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_tree"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="revision_state"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
