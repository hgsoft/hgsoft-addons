    <!-- ADD WINDOW ACTION SEARCH -->
    
    <record id="survey_evaluation_search" model="ir.ui.view">
        <field name="name">survey_evaluation_search</field>
        <field name="model">survey.user_input</field>
        <field name="arch" type="xml">
            <search string="Search Evaluation">                
                <field name="can_evaluate"/>
                <!--
                <field name="user_input_id"/>
                <field name="survey_id"/>
                -->
                <group expand="1" string="Group By">
                <!--
                    <filter name="group_by_survey" string="Survey" domain="[]"  context="{'group_by':'survey_id'}"/>                
                -->
                    <!--<field name="group_by_can_evaluate" string="Can Evaluate?" filter_domain="[('self.name','ilike',self)]"/>-->
                    
                    <filter name="group_by_can_evaluate" string="Can Evaluate?" domain="[('can_evaluate', '=', True)]"  context="{'group_by':'can_evaluate'}"/>                    
                </group>                
            </search>
        </field>
    </record>
        
    <!-- ADD MENU ITEM -->
    
    <menuitem name="Evaluations" id="menu_survey_evaluation" action="action_survey_evaluation_view" parent="survey.menu_surveys" sequence="1"/>
    
</odoo>
