<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
    <record model="ir.ui.view" id="user_send_survey_form_view">
        <field name="name">user.send.survey</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='messaging']/field" position="after">
                <field name="send_survey" string="Send survey by email?"/>
            </xpath>                              
        </field>
    </record>
</odoo>